<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit <%= recipe.name %></title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>

    <h1>Edit <%= recipe.name %></h1>
    <form action="/users/<%= user._id %>/recipes/<%= recipe._id %>?_method=PUT" method="POST">
        <label for="name">Recipe Name:</label>
        <input type="text" name="name" id="name" required value="<%= recipe.name %>">

        <label for="instructions">Recipe instructions</label>
        <textarea name="instructions" id="instructions"><%= recipe.instructions %></textarea>

        <div>
            <% ingredients.forEach((ingredient) => { %>
                <label for="ingredient"><%= ingredient.name %></label>
                <input type="checkbox" name="ingredients" value="<%= ingredient._id %>"  <% if (recipe.ingredients.includes(ingredient._id)) { %> checked <% } %>>
            <% }); %>
        </div>
        <button type="submit">Edit <%= recipe.name %></button>
    </form> 
</body>
</html>